<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <Button
        android:id="@+id/btn_reboot"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="重启设备"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <Button
        android:id="@+id/btn_start_service"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="开启守护服务"
        app:layout_constraintTop_toBottomOf="@+id/btn_reboot"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <Button
        android:id="@+id/btn_start_web"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="打开系统浏览器"
        app:layout_constraintTop_toBottomOf="@+id/btn_start_service"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <Button
        android:id="@+id/btn_start_aweme"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="开启抖音"
        app:layout_constraintTop_toBottomOf="@+id/btn_start_web"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <Button
        android:id="@+id/btn_start_wechat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="开启微信"
        app:layout_constraintTop_toBottomOf="@+id/btn_start_aweme"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <Button
        android:id="@+id/btn_start_interval_task"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="开启定时任务"
        app:layout_constraintTop_toBottomOf="@+id/btn_start_wechat"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/sample_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>